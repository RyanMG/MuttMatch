{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./app/api/*"],
      "@definitions/*": ["./app/lib/definitions/*"],
      "@hooks/*": ["./app/lib/hooks/*"],
      "@singletons/*": ["./app/lib/singletons/*"],
      "@utils/*": ["./app/lib/utils/*"],
      "@ui/*": ["./app/ui/*"],
      "@constants/*": ["./app/lib/constants/*"],
      "@context/*": ["./app/lib/context/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
